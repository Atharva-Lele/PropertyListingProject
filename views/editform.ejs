<%- layout("/layouts/boilerplate.ejs") %>
<form class="form" action="/listings/<%= result._id %>" method="post" enctype="multipart/form-data">

  <h2 class="title">Edit Listing</h2>
  <h4 class="form-label">Enter Title</h4>
  <input class="form-control" name="title" value="<%= result.title %>" placeholder="Enter title" />
  <br />
  <h4 class="form-label">Enter Description of listing</h4>
  <textarea
    name="description"
    placeholder="Enter listing decription"
    rows="6"
    cols="20"
    class="form-control"
  ><%= result.description %></textarea>
  <br />
  <div class="loc">
    <div class="loc-in">
        <h4 class="form-label">Enter location</h4>
        <input  value="<%= result.location %>" class="form-control" name="location" placeholder="Enter location" />
    </div>
    <div class="loc-in">
        <h4 class="form-label">Enter country</h4>
        <input value="<%= result.country%>" class="form-control" name="country" placeholder="Enter country" />
    </div>
    
  </div>
 
  <br />
  <h4 class="form-label"> Enter price</h4>
  <input value="<%= result.price%>" class="form-control" name="price" placeholder="Enter price" type="number" />
  <br />
  
  <div>
    <h4>Original listing image</h4>
    <img src=<%= result.newUrl %>>
  </div>
  <br>

  <h4 class="form-label">Upload New Image</h4>
  <input class="form-control" name="image[url]" type="file" />
  <br />
  <button class="btn">Edit</button>

</form>
