<%- layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-6 offset-3">
    <h3 class="col-6 offset-5 mb-3">Login</h3>
    <form
      action="/login"
      method="post"
      class="form"
      novalidate
    >
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          class="form-control"
          id="username"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          required
          id="password"
        />
      </div>
      <button class="btn btn-dark btn-sm col-4 offset-4">Log In</button>
    </form>
  </div>
</div>
